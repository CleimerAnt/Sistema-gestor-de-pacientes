@using SistemaGestorDePacientes.Core.Application.ViewModel.UsuarioViewModel;
@model SistemaGestorDePacientes.Core.Application.ViewModel.UsuarioViewModel.UsuarioPostViewModel;
@{
    ViewData["Title"] = "Registro";

    bool editMode = Model.Id == 0 ? false : true;
}
<form class=" formulario p-3 mt-4"  asp-controller="@(editMode ? "Usuario" : "Login")" asp-action="@(editMode ? "Editar" : "Registro")" method="post" style="height: 300px;">

    <div class="d-flex align-items-center justify-content-center">
        <h1 class="text-center fw-bold mb-2">@(editMode ? "Editar" : "Registro")</h1>
        
    </div>

    <div class="d-flex align-items-center justify-content-center">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    </div>

    <div class="d-flex  justify-content-center align-items-center flex-column">

        <div class="row"> 
            <div class="col-6">
                <div class="mb-3 d-flex flex-column">
                    <input class="form-control" asp-for="Nombre" placeholder="Nombre" />
                 
                </div>
                <div class="mb-3  d-flex flex-column">
                    <input class="form-control" asp-for="Apellido" placeholder="Apellido" />
           
                </div>
                <div class="mb-3  d-flex flex-column">
                    <input type="email" class="form-control" asp-for="Correo" placeholder="Correo" />
                   
                </div>

                <div class="mb-3  d-flex flex-column">
                    <input class="form-control" asp-for="NombreDeUsuario" placeholder="Nombre de Usuario" />
                   
                </div>
            </div>

            <div class="col-6">
                <div class="mb-3  d-flex flex-column">
                    <select asp-for="TipoUsuario" class="form-control select text-center" >

                        <option disabled value="0">--Selecciona--</option>

                        <option value="1">Administrador</option>

                        <option value="2">Usuario Asistente</option>

                    </select>
                   
               
                </div>
               
                    <div class="mb-3  d-flex flex-column">
                        <input class="form-control" type="password" asp-for="Contraseña" placeholder="Contraeña" />

                    </div>

                    <div class="mb-3 ">
                        <input class="form-control w-100" type="password" asp-for="ConfirmarContraseña" c placeholder="Confirmar Contraseña" />


                   </div>
                
            </div>

        </div>
      

    <div class="d-flex mt-3 justify-content-center  ">
            <button class=" boton-login"  type="submit">@(editMode ? "Editar" : "Registrarme")</button>
            
                <a asp-controller="Usuario" class=" mt-3 m-2 enlace-login" asp-action="Index">Volver Atras</a>
            
    </div>



</form>

