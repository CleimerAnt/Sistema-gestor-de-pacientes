@using SistemaGestorDePacientes.Core.Application.ViewModel.PacientesViewModel;
@model List<SistemaGestorDePacientes.Core.Application.ViewModel.PacientesViewModel.PacienteViewModel>;   
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<a style="background-color:#3FB7AD ; margin-left: 12px;" asp-controller="Paciente" class=" mt-3 mb-3 btn text-white" asp-action="Create">Crear Paciente</a>

@if (Model.Count == 0 || Model == null)
{
    <h1 class="mt-3 text-center">No hay hay Pacientes Agregados</h1>
}
else{

    <div class="container d-flex flex-column">
        <div class="row">
            @foreach (var paciente in Model)
            {
            <div class="col-3 mb-5">
                <img class="imagen__paciente" src="@paciente.ImgUrl" alt="" />

                <h2 class="text-center bg-success text-white mt-2 text-center p-2" style="font-size:23px ;">
                    @paciente.Nombre
                </h2>

                <div class="text-black bg-info text-center p-1">
                    <p class="mt-3">
                        <span class="fw-bold m-1">Apellido:</span> @paciente.Apellido
                    </p>

                    <p><span class="fw-bold m-1">Direccion:</span>@paciente.Direccion</p>

                    <p><span class="fw-bold m-1">Telefono:</span>@paciente.Telefono</p>

                    <p><span class="fw-bold m-1">Cedula:</span>@paciente.Cedula</p>

                        <div style="gap: 20px"
                             class="d-flex mt-2 align-content-center justify-content-center p-1">
                            <a asp-controller="Paciente" asp-action="Editar" asp-route-Id="@paciente.Id" class="btn btn-primary ">Editar</a>

                            <a asp-controller="Paciente" asp-action="Eliminar" asp-route-Id="@paciente.Id" class="btn btn-danger ">Eliminar</a>

                        </div>
                </div>
            </div> }
        </div>
    </div>
}

