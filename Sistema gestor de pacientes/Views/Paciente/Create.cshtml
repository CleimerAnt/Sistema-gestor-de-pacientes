@using SistemaGestorDePacientes.Core.Application.ViewModel.PacientesViewModel;
@model SistemaGestorDePacientes.Core.Application.ViewModel.PacientesViewModel.PacientePostViewModel;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

    bool editMode = Model.Id == 0 ? false : true;

  
}


<div class="d-flex align-items-center justify-content-center container mt-4">
    <form enctype="multipart/form-data" method="post" class="w-25 bg-succes p-3" asp-controller="Paciente" asp-action="@(editMode ? "Editar" : "Create")">
        <div class="p-2 bg-success mb-2 ">
            <h1 style="color: white;" class="text-center ">Agregar Paciente</h1>
        </div> @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <input asp-for="Nombre" class="form-control w-100 mb-3 p-2" placeholder="Nombre">

        <input asp-for="Apellido" class="form-control w-100 mb-3 p-2" placeholder="Apellido">

        <input asp-for="Cedula" class="form-control w-100 mb-3 p-2" placeholder="Cedula">

        <input asp-for="Telefono" class="form-control w-100 mb-3 p-2" placeholder="Telefono">

        <input asp-for="Direccion" class="form-control w-100 mb-3 p-2" placeholder="Direccion">
        @if (editMode)
        {
            <input asp-for="File"  class="form-control w-100 mb-3 p-2"  placeholder="Imagen">
        }
        else
        {
            <input asp-for="File" required class="form-control w-100 mb-3 p-2"  placeholder="Imagen">
        } 
        <input asp-for="FechaDeNacimiento"  class="form-control w-100 mb-3 p-2"  placeholder="Fecha de Nacimiento">

        <select asp-for="EsFumador">
            <option value="true">Fumo</option>
            <option value="false">No fumo</option>
        </select>

       <select asp-for="TieneAlergias">
           <option value="true">Tengo Alergias</option>
           <option value="false">No Tengo Alergias</option>
       </select>


        <div class="d-flex  justify-content-end align-items-end mt-3" style="gap:10px ;">
            <a asp-controller="Paciente" asp-action="Index" class="btn btn-secondary  font-weight-bold  ">Cancelar</a>
            <button type="submit" class="btn btn-primary  font-weight-bold">Agregar</button>
        </div>
    </form>
</div>

