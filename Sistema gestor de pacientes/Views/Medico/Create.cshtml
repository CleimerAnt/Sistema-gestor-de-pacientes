@using SistemaGestorDePacientes.Core.Application.ViewModel.MedicoViewModel;
@model SistemaGestorDePacientes.Core.Application.ViewModel.MedicoViewModel.MedicoPostViewModel;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

    bool editMode = Model.Id == 0 ? false : true;
}

<div class="d-flex align-items-center justify-content-center container mt-4">
    <form enctype="multipart/form-data" method="post" class="w-25 bg-info p-3" asp-controller="Medico" asp-action="@(editMode ? "Editar" : "Create")">
        <div class="p-2 bg-primary mb-2 ">
            <h1 style="color: white;" class="text-center ">Agregar Medico</h1>
        </div> @Html.ValidationSummary(false, "", new { @class = "text-white" })

        <input asp-for="Nombre" class="form-control w-100 mb-3 p-2"  placeholder="Nombre">
        
        <input asp-for="Apellido" class="form-control w-100 mb-3 p-2" placeholder="Apellido" >

        <input asp-for="Cedula" class="form-control w-100 mb-3 p-2" placeholder="Cedula">
        
        <input asp-for="Correo" class="form-control w-100 mb-3 p-2"  placeholder="Correo">

        <input asp-for="Telefono"  class="form-control w-100 mb-3 p-2" placeholder="Telefono">
        @if(editMode)
        {
            <input asp-for="File"  class="form-control w-100 mb-3 p-2" placeholder="Imagen">
        }
        else
        {
            <input asp-for="File" required class="form-control w-100 mb-3 p-2" placeholder="Imagen">
        }



        <div class="d-flex  justify-content-end align-items-end" style="gap:10px;">
            <a asp-controller="Medico" asp-action="Index" class="btn btn-secondary font-weight-bold ">Cancelar</a>
            <button type="submit" class="btn btn-primary  font-weight-bold">Agregar</button>
        </div>
    </form>
</div>


