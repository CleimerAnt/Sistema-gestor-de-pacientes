@using SistemaGestorDePacientes.Core.Application.ViewModel.UsuarioViewModel;
@model List<SistemaGestorDePacientes.Core.Application.ViewModel.UsuarioViewModel.UsuarioViewModel>
@{
    ViewData["Title"] = "Index";


    
}

<a style="background-color:#3FB7AD ;" asp-controller="Login"  class="text-white btn mt-2" asp-action="Registro">Crear Usuario</a>


@if (Model.Count == 0 || Model == null)
{
    <h1 class="mt-3 text-center">No hay hay Usuarios Agregados</h1>
}
else
{

    <section class="mt-4">
        <table class="table table-active text-center">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido del Usuario</th>
                    <th>Correo del Usuario</th>
                    <th>Tipo de Usuario</th>
                    <th>Acciones</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.Nombre</td>
                        <td>@usuario.Apellido</td>
                        <td>@usuario.Correo</td>
                        <td>@usuario.TipoUsuario</td>
                        <th>
                            <a class="btn btn-danger m-1 " asp-controller="Usuario" asp-route-Id="@usuario.Id" asp-action="Eliminar">Eliminar</a>

                            <a asp-controller="Usuario" asp-action="Editar" asp-route-Id="@usuario.Id " class="btn btn-primary text-white m-1">Editar</a>
                        </th>
                    </tr>
                }
            </tbody>
        </table>

    </section>
}
