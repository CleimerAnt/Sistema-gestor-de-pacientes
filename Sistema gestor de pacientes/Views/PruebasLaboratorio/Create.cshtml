@using SistemaGestorDePacientes.Core.Application.ViewModel.PruebasLaboratorioViewModel;
@model SistemaGestorDePacientes.Core.Application.ViewModel.PruebasLaboratorioViewModel.PruebaLaboratorioPostViewModel;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

    bool editMode = Model.Id == 0 ? false : true;
}


<div class="d-flex align-items-center justify-content-center container mt-4">
    <form enctype="multipart/form-data" method="post" class="w-25 bg-secondary p-3" asp-controller="PruebasLaboratorio" asp-action="@(editMode ? "Editar" : "Create")">
        <div class="p-2 bg-light mb-2 ">
            <h1 style="color: white;" class="text-center text-black">Agregar Prueba</h1>
        </div> @Html.ValidationSummary(false, "", new { @class = "text-white" })

        <input asp-for="NombreDeLaPrueba" class="form-control w-100 mb-3 p-2" placeholder="Nombre">


        <div class="d-flex  justify-content-end align-items-end" style="gap: 10px;">
            <a asp-controller="PruebasLaboratorio" asp-action="Index" class="btn btn-danger  font-weight-bold ">Cancelar</a>
            <button type="submit" class="btn btn-primary  font-weight-bold">Agregar</button>
        </div>
    </form>
</div>
